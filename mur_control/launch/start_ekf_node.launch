      <rosparam command="load" file="$(find mur_control)/config/head_camera.yaml" />
  </node-->
  <!-- LASER FILTER -->
  <node pkg="laser_filters" type="scan_to_scan_filter_chain"  name="laser_filter">
    <rosparam command="load" file="$(find mur_control)/config/laser_filter_config.yaml" />
    <remap from="scan" to="/mur/sonar" />
    <remap from="scan_filtered" to="/mur/sonar_filtered" />
  </node>
  <!-- LASER SCAN MATCHER -->
  <!--node pkg="laser_scan_matcher" type="laser_scan_matcher_node"  name="laser_scan_matcher_node" output="screen">
    <param name="fixed_frame" value="world"/>
    <param name="base_frame" value="/mur/base_link"/>
    <param name="use_odom" value="false"/>
    <param name="use_vel" value="false"/>
    <param name="publish_tf" value="false"/>
    <param name="publish_pose" value="false"/>
    <param name="publish_pose_stamped" value="true"/>
    <remap from="scan" to="/mur/sonar"/>
    <remap from="/imu/data" to="/mavros/imu/data"/>
  </node-->
  <!--node pkg="mur_control" type="mur_pose2d_parse.py" name="mur_pose2d_parse" output="screen"></node-->
