<launch>
    <node pkg="mur_control" type="mur_aruco_detector.py" name="mur_aruco_detector" output="screen">
        <rosparam command="load" file="$(find mur_control)/config/head_camera.yaml" />
    </node>
    <!-- WORLD BROADCASTER -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="world_broadcaster" args="0 0 0 0 0 0 world odom" />
    <!-- ROBOT BROADCASTER -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="robot_broadcaster_camera" args="-0.055 0.160 0 1.57 1.57 0 base_link camera_link_optical" />
    <!-- EKF LOCALIZATION -->
    <node pkg="robot_localization" type="ekf_localization_node" name="ekf_se" clear_params="true">
        <rosparam command="load" file="$(find mur_control)/config/ekf_template.yaml" />
        <remap from="odometry/filtered" to="mur/odom_filtered"/>
    </node>
    <!--node pkg="tf2_ros" type="static_transform_publisher" name="world_broadcaster" args="0 0 0 0 0 0 1 world map" /-->
</launch>
